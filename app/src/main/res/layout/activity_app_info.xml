<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muustar.plinng.AppInfoActivity">

    <include
        android:id="@+id/appinfo_appbar"
        layout="@layout/app_bar_layout" />

    <RelativeLayout
        android:id="@+id/appinfo_rl"
        android:layout_below="@id/appinfo_appbar"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appinfo_aktualVerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jelenlegi verzió:"
            android:layout_marginRight="10dp"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/appinfo_aktualVer"
            android:layout_toEndOf="@id/appinfo_aktualVerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/appinfo_elerhetoVerInfo"
            android:layout_below="@id/appinfo_aktualVer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elérhető verzió:"
            android:layout_marginRight="15dp"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/appinfo_elerhetoVer"
            android:layout_below="@id/appinfo_aktualVer"
            android:layout_toEndOf="@id/appinfo_elerhetoVerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42"
            android:textSize="24dp" />

        <Button
            android:id="@+id/appinfo_updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/colorAccent"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="Frissítés"/>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/appinfo_rl"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:Az alkalmazás ról néhány információ:"/>
    </ScrollView>
</RelativeLayout>